#include <iostream>
#include <math.h>
using namespace std;


int main()
{
    float x , suma=0;
    int n;
    do {
        cout<<"ingrese el valor de n : ";
        cin >> n ;
    }while(n<=0);
        cout<< "ingrese el valor de x: ";
        cin >> x;
     for (int i=1; i<= n ; i++){
         suma =suma+ pow (x,i);
         cout<< pow(x,i)<<"+";
     }
     cout<<endl<<"la suma es : "<<suma;
    return 0;
}
