#include <iostream>
#include <math.h>
using namespace std;

int main()
{
int n, suma = 0, x,i=1;
do{
   cout << "introduce un numero x :";
   cin >> x;
}while(x<=0);
cout << "introduce un numero para n:";
cin >> n;
do{
   suma = suma + pow(x, i);
   i=i+1;
} while (i <= n);
  cout << "la suma de la serie :" << suma << endl;
  return 0;
}
